<% content_for :stylesheets do %>
  <% unless params[:controller] == "errors" %>
    <%= stylesheet_link_tag "errors" %>
  <% end %>
<% end %>

<% content_for :javascripts do %>
  <% unless params[:controller] == "errors" %>
    <%= javascript_include_tag "errors" %>
  <% end %>
<% end %>

<div class="four-hundred-four">
  <h1>Four Hundred Four</h1>
  <h2>Sorry, the page you are looking for isn't here.</h2>
</div>

<% if Rails.env == "development" %>
  <pre><code>
    exception:
    <%= @exception.inspect %>
    
    backtrace:
    <%= Array(@exception.try(:backtrace)).join("\n") %>
    
    params:
    <%= params.inspect %>
  </pre></code>
<% end %>
